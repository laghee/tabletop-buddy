<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="edu.mills.tabletopbuddy.RandomGameActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='@string/random_game_activity'/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/random_machine_horizontal"
        android:gravity="center">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Categories:"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/categoryspinner"
                android:layout_width="wrap_content"
                android:spinnerMode="dialog"
                android:layout_height="wrap_content"
                android:entries="@array/categories"
                android:prompt="@string/spinner_category"/>
        </LinearLayout>
        <Space
            android:layout_width="1dp"
            android:layout_height="30dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Min Age:"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/agespinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/ages"
                android:prompt="@string/spinner_ages"/>
        </LinearLayout>
        <Space
            android:layout_width="1dp"
            android:layout_height="30dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Min Players:"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/playerspinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/players"
                android:prompt="@string/spinner_players"/>
        </LinearLayout>
        <Space
            android:layout_width="1dp"
            android:layout_height="30dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Min Time:"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/timespinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/times"
                android:prompt="@string/spinner_time"/>
        </LinearLayout>
        <Button
            android:id="@+id/get_random_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:padding="15dp"
            android:text="Submit"
            />
    </LinearLayout>
</LinearLayout>
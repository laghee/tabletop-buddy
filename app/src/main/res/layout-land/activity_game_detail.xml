<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="edu.mills.tabletopbuddy.GameDetailActivity">
    <ScrollView
        android:id="@+id/image_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:fillViewport="true">
        <ImageView android:id="@+id/photo"
            android:src="@drawable/star"
            android:layout_width="150dp"
            android:layout_height="fill_parent"
            />
</ScrollView>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <TextView android:id="@+id/game_name"
        android:text="Evil Fairy"
        android:textSize="30sp"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="3"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
>
            <TextView android:id="@+id/rating"
                android:background="@drawable/star_text"
                android:text="5.5"
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <CheckBox android:id="@+id/addToLibrary"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/addGame"
                android:onClick="onFavoriteClicked"/>
            <TextView android:id="@+id/theme"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/ages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_text"
                android:gravity="center"
                android:text="ages 4-6"
                android:layout_margin="5dp"
                android:textSize="12sp" />
            <TextView android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_text"
                android:gravity="center"
                android:text="45-60 min"
                android:layout_margin="5dp"
                android:textSize="12sp" />
            <TextView android:id="@+id/players"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_text"
                android:gravity="center"
                android:text="2-4 players"
                android:layout_margin="5dp"
                android:textSize="12sp" />
        </LinearLayout>
</LinearLayout>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent">



    <ScrollView
        android:id="@+id/description_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fillViewport="true">

        <TextView
            android:id="@+id/description"
            android:text="@string/lorem_ipsum"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textSize="20sp" />
    </ScrollView>
</LinearLayout>


</LinearLayout>
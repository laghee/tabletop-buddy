<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="edu.mills.tabletopbuddy.GameDetailActivity">
    <GridLayout
        android:columnCount="2"
        android:rowCount="3"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">
        <ImageView android:id="@+id/photo"
            android:src="@drawable/fairy"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_rowSpan="2"/>
        <LinearLayout
            android:layout_column="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_row="0">
            <TextView android:id="@+id/game_name"
                android:text="Evil Fairy"
                android:textSize="40sp"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1">
            <TextView android:id="@+id/rating"
                android:background="@drawable/star_text"
                android:text="5.5"
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <CheckBox android:id="@+id/favorite"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/favorite"
                android:onClick="onFavoriteClicked"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_row="2"
            android:layout_columnSpan="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/ages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_text"
                android:gravity="center"
                android:text="ages 4-6"
                android:layout_margin="10dp"
                android:textSize="15sp" />
            <TextView android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_text"
                android:gravity="center"
                android:text="45-60 min"
                android:layout_margin="10dp"
                android:textSize="15sp" />
            <TextView android:id="@+id/players"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_text"
                android:gravity="center"
                android:text="2-4 players"
                android:layout_margin="10dp"
                android:textSize="15sp" />
        </LinearLayout>

    </GridLayout>
    <TextView android:id="@+id/theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/description_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fillViewport="true">
        <TextView
            android:id="@+id/description"
            android:text="@string/lorem_ipsum"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textSize="30sp" />
    </ScrollView>


</LinearLayout>